#!/usr/bin/env python

import os
import random
import sys
import tty
import termios
import pygame
from time import sleep

print('Jingle Modul warm up....')

def main():
	pygame.init()
	pygame.mixer.init()
	print('Ready.')

	running = True
	inkey_buffer = 1

	def inkey():
		fd = sys.stdin.fileno()
		remember_attributes = termios.tcgetattr(fd)
		tty.setraw(sys.stdin.fileno())
		char = sys.stdin.read(inkey_buffer)
		termios.tcsetattr(fd,termios.TCSADRAIN, remember_attributes)
		print(char)
		return char

	def playJingle(source):
		pygame.mixer.music.load(source)
		pygame.mixer.music.play()
		return True

	nadine = ['nadine/nb_wurstvitamine2_long.mp3','nadine/nb_baehh.mp3','nadine/nb_eckelhaft.mp3','nadine/nb_haeee.mp3','nadine/nb_bio_is_abfall.mp3']
	andreas = ['andreas/pa_ausraster_schnauze.mp3','andreas/pa_bleibt_so.mp3','andreas/pa_bleibt_so2.mp3','andreas/pa_bleibt_so3_wohnung.mp3','andreas/pa_bleibt_so3_wohnung2.mp3','andreas/pa_brueller.mp3','andreas/pa_jetzt_rede_ich.mp3','andreas/pa_nicht_passt.mp3','andreas/pa_oberzicke.mp3','andreas/pa_stopp1.mp3','andreas/pa_weiter_diskutieren.mp3','andreas/pa_stopp3_halt_stopp.mp3']	
	sonstige = ['sonstige/xfiles.mp3','sonstige/xfactor.mp3']

	page = [nadine, andreas, sonstige]
	page_selected = 0

	while running:
		key = (inkey())

		if key == "1":
			(playJingle(page[page_selected][0]))
		if key == "2":
			(playJingle(page[page_selected][1]))
		if key == "3":
			print('3')		if key == "4":
			print('4')
		if key == "q":
			print('ByBy...')
			running = False

if __name__=="__main__":
	#call main function
	main()
